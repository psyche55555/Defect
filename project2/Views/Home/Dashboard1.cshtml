
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper">

    <div class="main-panel">


        <div class="content">
            <div class="container-fluid">



                <br />

                <br />


                <div id="train" style="height:300px;width:600px;position:center;margin-left:270px;"></div>
                <br />
                <hr />
                <br />
                <br />
                <div id="defect" style="height:300px;width:600px;position:center;margin-left:270px;"></div>
                <br />
                <hr />
                <br />
                <br />
                <div id="yield" style="height:300px;width:600px;position:center;margin-left:270px;"></div>


                <script>

                    var apiurl = "http://localhost:52249/api/Defect";
                    var apiurlTest = "http://localhost:52249/api/Test";
                    //train
                    var myChart1 = echarts.init(document.getElementById('train'));
                    //defect
                    var myChart2 = echarts.init(document.getElementById('defect'));
                    //yield
                    var myChart3 = echarts.init(document.getElementById('yield'));

                    //train
                    $.ajax({
                        url: apiurl,
                        type: "GET",
                        success: function (data) {
                            var sum0 = 0; var sum1 = 0; var sum2 = 0; var sum3 = 0; var sum4 = 0; var sum5 = 0;
                            for (var i = 0; i < data.length; i++) {
                                switch (data[i].label) {
                                    case 0:
                                        sum0 += 1;
                                        break
                                    case 1:
                                        sum1 += 1;
                                        break
                                    case 2:
                                        sum2 += 1;
                                        break
                                    case 3:
                                        sum3 += 1;
                                        break
                                    case 4:
                                        sum4 += 1;
                                        break
                                    case 5:
                                        sum5 += 1;
                                        break
                                }
                            }
                            var total = sum0 + sum1 + sum2 + sum3 + sum4 + sum5
                            var colors = ["#9DC8C8", "#6E7783", "#AAABD3", "#C89EC4", "#8EC0E4", "#d68189"]

                            //chart1
                            option = {
                                title: {
                                    text: '訓練統計總表',

                                },
                                tooltip: {
                                    trigger: 'axis',
                                    axisPointer: {
                                        type: 'cross',
                                        crossStyle: {
                                            color: '#fff'

                                        }
                                    },
                                },
                                legend: {
                                    data: ['Dataset', 'Percentage']
                                },
                                //toolbox: {
                                //    feature: {
                                //        dataView: { show: true, readOnly: false, title: '數據視圖' },
                                //        magicType: {
                                //            show: true, title: { line: "折線圖", bar: "柱狀圖" }, type: ['line', 'bar']
                                //        },
                                //        restore: { show: true, title: '還原' },
                                //        saveAsImage: { show: true, title: '存檔' }
                                //    }
                                //},
                                calculable: true,
                                xAxis: [{
                                    type: 'category',
                                    data: ['Normal', 'Particle', 'Void', 'Verticle', 'Edge', 'Horizontal'],
                                    splitLine: false,
                                    //boundaryGap: false,
                                    axisPointer: {
                                        type: 'shadow'
                                    }
                                }, {
                                    type: 'category',
                                    show: false,
                                    boundaryGap: false,
                                    data: ['0', 'Normal', 'Particle', 'Void', 'Verticle', 'Edge', "Horizontal"],
                                    splitLine: false
                                }],
                                yAxis: [{
                                    type: 'value',
                                    name: '數量',
                                    min: 0,
                                    max: 800,
                                    interval: 100,
                                    boundaryGap: [0, 0.1],
                                    splitLine: false,
                                    axisLabel: {
                                        formatter: '{value}'
                                    }
                                },
                                {
                                    type: 'value',
                                    name: '累進比率(%)',
                                    min: 0,
                                    max: 100,
                                    interval: 20,
                                    axisLabel: {
                                        formatter: '{value}'
                                    },
                                    splitLine: false
                                }
                                ],
                                series: [
                                    {
                                        name: 'Dataset',
                                        type: 'bar',
                                        barCategoryGap: '20%',
                                        itemStyle: {
                                            normal: {
                                                color: function (obj) {
                                                    if (obj.dataIndex >= 0) {
                                                        return colors[obj.dataIndex];
                                                    }
                                                },
                                                //barBorderColor: 'red',
                                                //barBorderWidth: 0.4,
                                                barBorderRadius: 3,
                                                label: {
                                                    show: true,
                                                    position: 'insideTop'
                                                }
                                            }
                                        },
                                        data: [sum0, sum5, sum1, sum3, sum4, sum2]
                                    },
                                    {
                                        name: 'Percentage',
                                        type: 'line',
                                        xAxisIndex: 1,
                                        yAxisIndex: 1,
                                        itemStyle: {
                                            normal: {
                                                label:
                                                {
                                                    show: true,
                                                    //格式化
                                                    formatter: '{c}%'
                                                },
                                                lineStyle: {
                                                    color: '#e85a71'
                                                },
                                                color: '#e85a71'
                                            }
                                        },
                                        data: [0,
                                            ((sum0 / total) * 100).toFixed(2),
                                            (((sum0 + sum5) / total) * 100).toFixed(2),
                                            (((sum0 + sum5 + sum1) / total) * 100).toFixed(2),
                                            (((sum0 + sum5 + sum1 + sum3) / total) * 100).toFixed(2),
                                            (((sum0 + sum5 + sum1 + sum3 + sum4) / total) * 100).toFixed(2),
                                            (((sum0 + sum5 + sum1 + sum3 + sum4 + sum2) / total) * 100).toFixed(2)
                                        ]
                                    }
                                ]
                            };
                            myChart1.setOption(option);
                        }
                    });
                    //defect
                    $.ajax({
                        url: apiurlTest,
                        type: "GET",
                        success: function (data) {
                            var bad1 = 0; var bad2 = 0; var bad3 = 0; var bad4 = 0; var bad5 = 0;
                            for (var i = 0; i < data.length; i++) {
                                switch (data[i].label) {
                                    case 1:
                                        bad1++;
                                        break
                                    case 2:
                                        bad2++;
                                        break
                                    case 3:
                                        bad3++;
                                        break
                                    case 4:
                                        bad4++;
                                        break
                                    case 5:
                                        bad5++;
                                        break
                                }
                            }
                            var total = bad1 + bad2 + bad3 + bad4 + bad5;
                            option = {
                                title: {
                                    text: '影像辨識瑕疵數量統計'
                                },
                                tooltip: {
                                    trigger: 'axis',
                                    axisPointer: {
                                        type: 'cross',
                                        crossStyle: {
                                            color: '#999'
                                        }
                                    }
                                },
                                legend: {
                                    selectedMode: false,
                                    data: ['Defect', 'Percentage']
                                },
                                xAxis: [
                                    {
                                        type: 'category', //顯示橫坐標中對應值的座標線（豎縣）：默認不顯示
                                        //splitLine:{show:true},
                                        data: ['Particle', 'Void', 'Verticle', 'Edge', 'Horizontal'],
                                        splitLine: false
                                    }, {
                                        type: 'category',
                                        show: false,
                                        boundaryGap: false,
                                        data: ['0', 'Particle', 'Void', 'Verticle', 'Edge', "Horizontal"],
                                        splitLine: false
                                    }
                                ],
                                yAxis: [
                                    {
                                        type: 'value', splitLine: false, //縱座標軸上的各個值對應的横線是否顯示：默認顯示
                                        name: '數量',
                                        min: 0,
                                        max: 100,
                                        interval: 20,
                                        axisLabel: {
                                            formatter: '{value}'
                                        }
                                    },
                                    {
                                        type: 'value',
                                        name: '累進比率(%)',
                                        min: 0,
                                        max: 100,
                                        interval: 20,
                                        splitLine: false, //縱座標軸上的各個值對應的横線是否顯示：默認顯示
                                        axisLabel: {
                                            formatter: '{value}'
                                        }
                                    }
                                ],
                                series: [
                                    {
                                        name: 'Defect',
                                        type: 'bar', barCategoryGap: '20',//柱狀圖之間的空隙為0 //設置柱狀圖的颜色
                                        itemStyle: {
                                            normal: {
                                                color: function (params) {
                                                    var colorList = [
                                                        '#a5dff9', '#ee6e9f', '#81b6b2', '#feee7d', '#ff7473',
                                                        '#ef5285', '#81b6b2', '#feee7d', '#ff7473', '#ef5285'
                                                    ];
                                                    return colorList[params.dataIndex]
                                                }, //設置柱狀圖邊框線顏色
                                                //barBorderColor: 'black',
                                                //設置柱狀圖邊框線的顯示寬度
                                                //barBorderWidth:0.5
                                            }
                                        },
                                        data: [bad5, bad1, bad3, bad4, bad2]
                                    },
                                    {
                                        name: 'Percentage',
                                        type: 'line',
                                        //顯示數字
                                        itemStyle:
                                        {
                                            normal: {
                                                label:
                                                {
                                                    show: true,
                                                    //格式化
                                                    formatter: '{c}%'
                                                },
                                                lineStyle: {
                                                    color: '#e85a71'
                                                },
                                                color: '#e85a71'
                                            }
                                        },
                                        xAxisIndex: 1,
                                        yAxisIndex: 1,
                                        data: [0,
                                            ((bad5 / total) * 100).toFixed(2),
                                            (((bad5 + bad1) / total) * 100).toFixed(2),
                                            (((bad5 + bad1 + bad3) / total) * 100).toFixed(2),
                                            (((bad5 + bad1 + bad3 + bad4) / total) * 100).toFixed(2),
                                            (((bad5 + bad1 + bad3 + bad4 + bad2) / total) * 100).toFixed(2)
                                        ]
                                    }
                                ]
                            };
                            myChart2.setOption(option);
                        }
                    })
                    //yield
                    $.ajax({
                        url: apiurlTest,
                        type: "GET",
                        success: function (data) {
                            var a1 = 0; var a2 = 0; var a3 = 0; var a4 = 0; var a5 = 0; var a6 = 0; var a7 = 0; var a8 = 0; var a9 = 0;
                            var b1 = 0; var b2 = 0; var b3 = 0; var b4 = 0; var b5 = 0; var b6 = 0; var b7 = 0; var b8 = 0; var b9 = 0;
                            var y1 = 0; var y2 = 0; var y3 = 0; var y4 = 0; var y5 = 0; var y6 = 0; var y7 = 0; var y8 = 0; var y9 = 0;

                            option = {
                                title: {
                                    text: '批次影像辨識良率統計'
                                    //subtext: '下標籤'
                                },
                                tooltip: {
                                    trigger: 'axis'
                                },
                                legend: {
                                    data: ['良率']
                                },
                                //toolbox: {
                                //    show: true,
                                //    feature: {
                                //        dataZoom: {
                                //            yAxisIndex: 'none'
                                //        },
                                //        dataView: { readOnly: false },
                                //        magicType: { type: ['line', 'bar'] },
                                //        restore: {},
                                //        saveAsImage: {}
                                //    }
                                //},
                                xAxis: {
                                    type: 'category',
                                    boundaryGap: false,
                                    data: ['1', '2', '3', '4', '5', '6', '7', '8', '9']
                                },
                                yAxis: {
                                    type: 'value',
                                    name: '比例',
                                    min: 80,
                                    max: 100,
                                    interval: 4,
                                    axisLabel: {
                                        formatter: '{value}'
                                    }
                                },
                                series: [
                                    {
                                        name: '良率',
                                        type: 'line',
                                        data: [88.46, 91.56, 90.35, 90.73, 91.84, 92.95, 92.05, 93.10, 94.55],

                                        markPoint: {
                                            data: [
                                                { type: 'max', name: '最大值' },
                                                { type: 'min', name: '最小值' }]
                                        },
                                        itemStyle:
                                        {
                                            normal: {
                                                label:
                                                {
                                                    show: true,

                                                    //格式化
                                                    formatter: '{c}%'
                                                },
                                                lineStyle: {
                                                    color: '#e85a71'
                                                },
                                                color: '#e94e77'
                                            }
                                        },
                                        //markPoint: {
                                        //    data: [
                                        //        { type: 'max', name: '最大值' },
                                        //        { type: 'min', name: '最小值' }
                                        //    ]
                                        //},
                                        markLine: {
                                            data: [
                                                { type: 'average', name: '平均值' }
                                            ]
                                        }
                                    }
                                ]
                            };
                            myChart3.setOption(option);
                        }
                    })
                </script>

            </div>
        </div>

    </div>
</div>


